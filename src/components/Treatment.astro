---

interface AstroProps {
    title: string;
    subtitle: string;
    image: string;
}

const { title, subtitle, image } = Astro.props;
---

<article class="flex flex-col items-center justify-center gap-4">
    <img src=`./${image}` alt={title} class=" rounded-full">

    <div class="flex flex-col items-center justify-center">
        <h3 class=" text-blue dark:text-white font-bold">{title}</h3>
        <p class=" text-gray dark:text-white opacity-50 text-sm">{subtitle}</p>
        <p class="text-green">__ __</p>
    </div>
</article>