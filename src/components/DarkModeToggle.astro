<input type="checkbox" class="theme-checkbox">

<style>
    .theme-checkbox {
  --toggle-size: 8px;  
  -webkit-appearance: none;
     -moz-appearance: none;
          appearance: none;
  width: 6.25em;
  height: 3.125em;
  background: -webkit-gradient(linear, left top, right top, color-stop(50%, #e5e5e5), color-stop(50%, #85c225ff)) no-repeat;
  background: linear-gradient(to right, #e5e5e5 50%, #85c225ff 50%) no-repeat;
  background-size: 205%;
  background-position: 0;
  -webkit-transition: 0.4s;
  transition: 0.4s;
  border-radius: 99em;
  position: relative;
  cursor: pointer;
  font-size: var(--toggle-size);
}
.theme-checkbox::before {
  content: url("../../public/moon-solid.svg");
  width: 1.8em;
  height: 1.8em;
  position: absolute;
  top: 0.438em;
  left: 0.438em;
  /* background: linear-gradient(to right, #85c225ff 50%, #5c669bff 50%)no-repeat; */
  background-size: 205%;
  background-position: 100%;
  border-radius: 50%;
  -webkit-transition: 0.4s;
  transition: 0.4s;
}
.theme-checkbox:checked::before {
  left: calc(100% - 2.25em - 0.438em);
  background-position: 0;
}
.theme-checkbox:checked {
  background-position: 100%;
}
</style>


<script>

  const themeCheckboxes = document.querySelectorAll('.theme-checkbox');
  const html = document.querySelector('html');

  themeCheckboxes.forEach(themeCheckbox => {
    themeCheckbox.addEventListener('change', () => {
      html.classList.toggle('dark');
    });
  });
</script>